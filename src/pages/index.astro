---
import { getCollection } from 'astro:content'

const posts = await getCollection('blog')

// aboutページ
const aboutPost = {
  slug: "about",
  data: {
    title: "about",
    date: "2025-06-01",
    summary: "about 自己紹介"
  }
}

const guidePost = {
  slug: "同人誌制作手引",
  data: {
    title: "同人誌制作手引",
    date: "2025-06-01"
  }
}

// 初投稿
const pagesPosts = [
  {
    slug: "初投稿",
    title: "初投稿",
    date: "2025-06-01",
    summary: "初めての投稿です"
  },
];
---
<html>
  <head>
    <title>まどか記録帳</title>
    <style>
      body {
        font-family: sans-serif;
        background-color: #f7f7f7;
        padding: 20px;
      }

      .container {
        max-width: 960px;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        gap: 40px;
      }

      .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
  }

      .card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
        transition: transform 0.2s;
        display: block;
        color: inherit;
        text-decoration: none;
      }

      .card:hover {
        transform: translateY(-4px);
      }

      .card h2 {
        margin-top: 0;
      }

      .card p {
        color: #555;
      }
    </style>
  </head>
  <body> 
    <!-- ✅ ヘッダー画像 -->
    <header>
      <img src="/サイトヘッダー仮2.png" alt="サイトヘッダー仮2" style="width: 100%; height: auto;"/>
    </header>

    <main class="container">
     <!-- about + 同人誌手引 1段目に並べる -->
<section class="grid">
  {[aboutPost, guidePost].map(post => (
    <a href={`/${post.slug}`} class="card">
      <h2>{post.data.title}</h2>
      <p>post.data.summary</p>
       {post.data.date && <p style="font-size: 0.9em; color: #888;">{post.data.date}</p>}
    </a>
  ))}
</section>

      <!-- 2段目: 初投稿＋ブログ記事 -->
      <section class="grid">
        {[
          ...pagesPosts.map(p => ({
            slug: p.slug,
            title: p.title,
            summary: p.summary
          })),
          ...posts.map((p: { slug: any; data: { title: any; summary: any; }; }) => ({
            slug: p.slug,
            title: p.data.title,
            summary: p.data.summary
          }))
        ].map(post => (
          <a href={`/${post.slug}`} class="card">
            <h2>{post.title}</h2>
            <p>{post.summary}</p>
             {post.data.date && <p style="font-size: 0.9em; color: #888;">{post.data.date}</p>}
          </a>
        ))}
      </section>
    </main>
  </body>
</html>

