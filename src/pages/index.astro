---
import { getCollection } from 'astro:content'
const posts = await getCollection('blog')

// aboutページ（手動追加）
const aboutPost = {
  slug: "about",
  data: {
    title: "about",
    summary: "このサイトについてのページです"
  }
}

// aboutだけ先頭に固定して他は自動（初投稿含む）
const allPosts = [aboutPost, ...posts]
---

<html>
  <head>
    <title>ブログ一覧</title>
    <style>
      body {
        font-family: sans-serif;
        background-color: #f7f7f7;
        padding: 20px;
      }
      .grid-container {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
        max-width: 960px;
        margin: 0 auto;
      }
      .card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
        transition: transform 0.2s;
        text-decoration: none;
        color: inherit;
        display: block;
      }
      .card:hover {
        transform: translateY(-4px);
      }
      .card h2 {
        margin-top: 0;
      }
      .card p {
        color: #555;
      }
    </style>
  </head>
  <body>
    <h1>記事一覧</h1>

    <section class="grid-container">
      {allPosts.map(post => (
        <a href={post.slug === "about" ? "/about" : `/blog/${post.slug}`} class="card">
          <h2>{post.data.title}</h2>
          <p>{post.data.summary || "記事の概要をここに追加できます。"}</p>
        </a>
      ))}
    </section>
  </body>
</html>

