---
import Layout from '../layouts/Layout.astro';

const posts = [
  { title: "初投稿", link: "/初投稿" },
  { title: "テスト記事2", link: "/test2" },
  { title: "テスト記事3", link: "/test3" }
];
---

<Layout>
  <main class="p-6">
    <div class="mb-4">
      <a href="/about" class="text-blue-600 underline">about</a>
    </div>

    <section class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
      {posts.map(post => (
        <a href={post.link} class="block border p-4 rounded-lg shadow hover:shadow-md transition">
          <h2 class="text-xl font-bold mb-2">{post.title}</h2>
          <p class="text-gray-600">記事の概要をここに追加できます。</p>
        </a>
      ))}
    </section>
  </main>
</Layout>
